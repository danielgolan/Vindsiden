<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Larkollen"
                android:id="@+id/tv_Stedsnavn" android:textSize="30dp"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Naviger"
                android:id="@+id/b_navigate" android:singleLine="false"
                android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Bygd"
                android:id="@+id/tv_StedType" android:enabled="true"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=" i "
                android:id="@+id/tv_i"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Kommune"
                android:id="@+id/tv_kommune"/>
    </LinearLayout>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="UrL"
            android:id="@+id/tv_url"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasjon"
                    android:id="@+id/txt_detail_InformasjonHeading"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txt_detail_Informasjon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Egnet for : "
                    android:id="@+id/txt_detail_EgnetForHeading"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txt_detail_EgnetFor"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasiliteter :"
                    android:id="@+id/txt_detail_FasiliteterHeading"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txt_detail_Fasiliteter"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vannforhold :"
                    android:id="@+id/txt_detail_VannforholdHeading"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txt_detail_Vannforhold"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView" android:src="@drawable/info_vindstyrke"/>
        <WebView
                android:layout_width="550dp"
                android:layout_height="match_parent"
                android:id="@+id/ww_Yr"/>
    </LinearLayout>

</LinearLayout>